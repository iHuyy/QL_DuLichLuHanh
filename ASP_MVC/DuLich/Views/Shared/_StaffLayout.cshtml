<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Admin Dashboard</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/admin/images/favicon.png">
    <!-- Vectormap -->
    <link href="~/admin/vendor/jqvmap/css/jqvmap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/admin/vendor/chartist/css/chartist.min.css">
    <!-- Summernote -->
    <link href="~/vendor/summernote/summernote.css" rel="stylesheet">
    <link rel="stylesheet" href="~/admin/vendor/bootstrap-select/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/admin/css/style.css">

</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <a href="/staff" class="brand-logo">
                <img class="logo-abbr" src="~/admin/images/logo.png" alt="" loading="lazy">
                <img class="brand-title" src="~/admin/images/logo-text.png" alt="" loading="lazy">
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
                </div>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->
        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">
            <div class="header-content">
                <nav class="navbar navbar-expand">
                    <div class="collapse navbar-collapse justify-content-between">
                        <div class="header-left">
                        </div>

                        <ul class="navbar-nav header-right">
                            <li class="nav-item dropdown header-profile">
                                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                    <i class="fa fa-user"></i>
                                    <span class="ml-2">@User.Identity?.Name</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a asp-area="Staff" asp-controller="Staff" asp-action="Profile"
                                        class="dropdown-item ai-icon">
                                        <i class="fa fa-user"></i>
                                        <span class="ml-2">Thông tin cá nhân</span>
                                    </a>
                                    <a asp-area="Staff" asp-controller="Auth" asp-action="Logout"
                                        class="dropdown-item ai-icon">
                                        <i class="fa fa-sign-out-alt"></i>
                                        <span class="ml-2">Đăng xuất</span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->
        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class=" dlabnav">
            <div class="dlabnav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label first">Main Menu</li>
                    @{
                        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
                        var action = ViewContext.RouteData.Values["action"]?.ToString();
                    }
                    <li class="@(controller == "Staff" && action == "Index" ? "mm-active" : "")">
                        <a asp-controller="Staff" asp-action="Index" class="ai-icon">
                            <i class="fa fa-dashboard"></i>
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li class="@(controller == "Staff" && action == "Bookings" ? "mm-active" : "")">
                        <a asp-controller="Staff" asp-action="Bookings" class="ai-icon">
                            <i class="fa fa-calendar-check"></i>
                            <span class="nav-text">Quản lí đặt tour</span>
                        </a>
                    </li>
                    <li class="@(controller == "Staff" && action == "Tours" ? "mm-active" : "")">
                        <a asp-controller="Staff" asp-action="Tours" class="ai-icon">
                            <i class="fa fa-plane"></i>
                            <span class="nav-text">Quản lý tour</span>
                        </a>
                    </li>
                    <li class="@(controller == "Staff" && action == "Customers" ? "mm-active" : "")">
                        <a asp-controller="Staff" asp-action="Customers" class="ai-icon">
                            <i class="fa fa-users"></i>
                            <span class="nav-text">Khách hàng</span>
                        </a>
                    </li>
                    <li class="@(controller == "Staff" && action == "Reports" ? "mm-active" : "")">
                        <a asp-controller="Staff" asp-action="Reports" class="ai-icon">
                            <i class="fa fa-chart-bar"></i>
                            <span class="nav-text">Báo cáo</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <div class="content-body">
            <div class="container-fluid">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <strong>Thành công!</strong> @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <strong>Lỗi!</strong> @TempData["Error"]
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                }
                @RenderBody()
            </div>
        </div>


        <div class="footer">
            <div class="copyright">
                <p>Copyright © @DateTime.Now.Year - Travel Management System</p>
            </div>
        </div>

    </div> <!-- end #main-wrapper -->

    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/admin/vendor/global/global.min.js"></script>
    <script src="~/admin/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/admin/js/custom.min.js"></script>
    <script src="~/admin/js/dlabnav-init.js"></script>
    <!-- Chart Chartist plugin files -->
    <script src="~/admin/vendor/chartist/js/chartist.min.js"></script>
    <!-- Chart ChartJS plugin files -->
    <script src="~/admin/vendor/chart.js/Chart.bundle.min.js"></script>
    <!-- Vectormap -->
    <script src="~/admin/vendor/jqvmap/js/jquery.vmap.min.js"></script>
    <script src="~/admin/vendor/jqvmap/js/jquery.vmap.world.js"></script>
    <!-- Demo scripts -->
    <script src="~/admin/js/dashboard/dashboard.js"></script>
    <!-- Svganimation scripts -->
    <script src="~/admin/vendor/svganimation/vivus.min.js"></script>
    <script src="~/admin/vendor/svganimation/svg.animation.js"></script>
    <script src="~/admin/js/styleSwitcher.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>