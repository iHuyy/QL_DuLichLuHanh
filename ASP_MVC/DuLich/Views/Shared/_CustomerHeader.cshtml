@* Converted from Template/Customer/clients/blocks/header_home.blade.php *@
<div class="page-wrapper">

    <!-- Preloader -->
    <div class="preloader">
        <div class="custom-loader"></div>
    </div>

    <!-- main header -->
    <header class="main-header header-one white-menu menu-absolute">
        <div class="header-upper py-30 rpy-0">
            <div class="container-fluid clearfix">

                <div class="header-inner rel d-flex align-items-center">
                    <div class="logo-outer">
                        <div class="logo"><a asp-controller="Customer" asp-action="Index"><img src="~/customer/assets/images/logos/logo.png" alt="Logo" title="Logo" /></a></div>
                    </div>

                    <div class="nav-outer mx-lg-auto ps-xxl-5 clearfix">
                        <!-- Main Menu -->
                        <nav class="main-menu navbar-expand-lg">
                            <div class="navbar-header">
                                <div class="mobile-logo">
                                    <a asp-controller="Customer" asp-action="Index">
                                        <img src="~/customer/assets/images/logos/logo.png" alt="Logo" title="Logo" />
                                    </a>
                                </div>

                                <!-- Toggle Button -->
                                <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>

                            <div class="navbar-collapse collapse clearfix">
                                <ul class="navigation clearfix">
                                    <li><a asp-controller="Customer" asp-action="Index">Trang chủ</a></li>
                                    <li><a href="/Home/Privacy">Giới thiệu</a></li>
                                    <li class="dropdown"><a href="#">Tours</a>
                                        <ul>
                                            <li><a href="/Tours">Tours</a></li>
                                            <li><a href="/Team">Hướng dẫn viên</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="/Destination">Điểm đến</a></li>
                                    <li><a href="/Contact">Liên Hệ</a></li>
                                </ul>
                            </div>

                        </nav>
                        <!-- Main Menu End-->
                    </div>

                    <!-- Nav Search -->
                    <div class="nav-search">
                        <button class="far fa-search"></button>
                        <form action="/Customer/Index" class="hide" method="GET">
                            <input type="text" name="keyword" placeholder="Search" class="searchbox" required />
                            <button type="submit" class="searchbutton far fa-search"></button>
                        </form>
                    </div>

                    <!-- Menu Button -->
                    <div class="menu-btns py-10">
                        <a href="/Tours" class="theme-btn style-two bgc-secondary">
                            <span data-hover="Đặt Ngay">Book Now</span>
                            <i class="fal fa-arrow-right"></i>
                        </a>

                        <div class="menu-sidebar">
                            <li class="drop-down">
                                <button class="dropdown-toggle bg-transparent" id="userDropdown" style="color: white">
                                    @if (User?.Identity?.IsAuthenticated == true)
                                    {
                                        <span class="text-white">@User.Identity.Name</span>
                                    }
                                    else
                                    {
                                        <i class='bx bxs-user bx-tada' style="font-size: 36px; color: white;"></i>
                                    }
                                </button>

                                <ul class="dropdown-menu" id="dropdownMenu">
                                    @if (User?.Identity?.IsAuthenticated == true)
                                    {
                                        <li><a href="/Customer/Profile">Thông tin cá nhân</a></li>
                                        <li><a href="/Customer/MyTours">Tour đã đặt</a></li>
                                        <li>
                                            <form asp-controller="Customer" asp-action="Logout" method="post">
                                                <button class="btn btn-link">Đăng xuất</button>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        <li><a asp-controller="Customer" asp-action="Login">Đăng nhập</a></li>
                                    }
                                </ul>

                            </li>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End Header Upper-->
    </header>
