                                <input type="text" name="keyword" placeholder="Search" class="searchbox" required />
                                <button type="submit" class="searchbutton far fa-search"></button>
                            </form>
                        </div>

                        <!-- Menu Button -->
                        <div class="menu-btns py-10">
                            <a href="/Tours" class="theme-btn style-two bgc-secondary">
                                <span data-hover="Đặt Ngay">Book Now</span>
                                <i class="fal fa-arrow-right"></i>
                            </a>

                            <div class="menu-sidebar">
                                <li class="drop-down">
                                    <button class="dropdown-toggle bg-transparent" id="userDropdown"
                                        style="color: white">
                                        @if (User?.Identity?.IsAuthenticated == true)
                                        {
                                            <span class="text-white">@User.Identity.Name</span>
                                        }
                                        else
                                        {
                                            <i class='bx bxs-user bx-tada' style="font-size: 36px; color: white;"></i>
                                        }
                                    </button>

                                    <ul class="dropdown-menu" id="dropdownMenu">
                                        @if (User?.Identity?.IsAuthenticated == true)
                                        {
                                            <li><a href="/Customer/Profile">Thông tin cá nhân</a></li>
                                            <li><a href="/Customer/MyTours">Tour đã đặt</a></li>
                                            <li>
                                                <form asp-controller="Customer" asp-action="Logout" method="post">
                                                    <button class="btn btn-link">Đăng xuất</button>
                                                </form>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a asp-controller="Customer" asp-action="Login">Đăng nhập</a></li>
                                        }
                                    </ul>

                                </li>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
