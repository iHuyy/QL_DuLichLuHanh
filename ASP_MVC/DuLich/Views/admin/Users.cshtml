@model IEnumerable<DuLich.Models.KhachHang>
@{
    ViewData["Title"] = "Quản lý Khách hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Users">Khách hàng</a></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Danh sách khách hàng</h4>
                <a class="btn btn-primary" href="/Admin/CreateUser?role=KhachHang">
                    <i class="fa fa-plus"></i> Thêm khách hàng
                </a>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                <div class="table-responsive">
                    <table id="example" class="display table" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>Mã KH</th>
                                <th>Họ Tên</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.MaKhachHang</td>
                                    <td>@user.HoTen</td>
                                    <td>@user.Email</td>
                                    <td>@user.SoDienThoai</td>
                                    <td>@user.DiaChi</td>
                                    <td>@user.NgayTao?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <form asp-action="ChangeUserStatus" method="post">
                                            <input type="hidden" name="id" value="@user.MaKhachHang" />
                                            <select name="trangThai" class="form-control form-control-sm" onchange="this.form.submit()">
                                                @if (user.TrangThai == "HoatDong")
                                                {
                                                    <option value="HoatDong" selected>Hoạt động</option>
                                                    <option value="BiKhoa">Bị khóa</option>
                                                }
                                                else
                                                {
                                                    <option value="HoatDong">Hoạt động</option>
                                                    <option value="BiKhoa" selected>Bị khóa</option>
                                                }
                                            </select>
                                        </form>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="@Url.Action("Details", "Admin", new { username = user.ORACLE_USERNAME })" class="btn btn-info shadow btn-xs sharp mr-1" title="Xem chi tiết"><i class="fa fa-eye"></i></a>
                                            <a href="@Url.Action("EditUser", "Admin", new { id = user.MaKhachHang })" class="btn btn-primary shadow btn-xs sharp mr-1" title="Sửa"><i class="fa fa-pencil"></i></a>
                                            <form asp-action="DeleteUserById" asp-route-id="@user.MaKhachHang" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa người dùng này?');">
                                                <button type="submit" class="btn btn-danger shadow btn-xs sharp" title="Xóa"><i class="fa fa-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
                }
            });
        });
    </script>
}
