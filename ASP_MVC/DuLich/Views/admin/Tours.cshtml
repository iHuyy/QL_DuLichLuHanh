@model List<DuLich.Models.TourViewModel>
@{
    ViewData["Title"] = "Quản lý Tour";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Quản lý Tour</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <!-- 'Thêm Tour mới' intentionally removed for Admin as per requirement -->
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <div class="table-responsive">
                    <table id="example" class="display table" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th>Mã Tour</th>
                                <th>Tên Tour</th>
                                <th>Điểm đến</th>
                                <th>Chi nhánh</th>
                                <th>Ngày khởi hành</th>
                                <th>Giá</th>
                                <th>Số chỗ còn lại</th>
                                <th>Trạng thái</th>
                                <th>QR Code</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tour in Model)
                            {
                                <tr>
                                    <td>@tour.MaTour</td>
                                    <td>@tour.TenTour</td>
                                    <td>@tour.DiemDen</td>
                                    <td>@tour.ChiNhanh</td>
                                    <td>@tour.NgayKhoiHanh.ToString("dd/MM/yyyy")</td>
                                    <td>@tour.Gia.ToString("N0") VNĐ</td>
                                    <td>@tour.SoChoConLai / @tour.SoLuong</td>
                                    <td>
                                        <form asp-controller="TourManagement" asp-action="ChangeStatus" method="post">
                                            <input type="hidden" name="id" value="@tour.Id" />
                                            <select name="status" class="form-control form-control-sm" onchange="this.form.submit()">
                                                <option value="Hoạt động" selected="@(tour.TrangThai == "Hoạt động")">Hoạt động</option>
                                                <option value="Không hoạt động" selected="@(tour.TrangThai == "Không hoạt động")">Không hoạt động</option>
                                            </select>
                                        </form>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(tour.QR))
                                        {
                                            <button class="btn btn-info btn-sm" onclick="showQR('@tour.QR')">
                                                <i class="fas fa-qrcode"></i>
                                            </button>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="@Url.Action("TourDetails", "Admin", new { id = tour.Id })" class="btn btn-info shadow btn-xs sharp mr-1" title="Xem chi tiết"><i class="fa fa-eye"></i></a>
                                            <a href="@Url.Action("EditTour", "Admin", new { id = tour.Id })"
                                                class="btn btn-primary shadow btn-xs sharp mr-1">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                            <form action="/Admin/DeleteTour/@tour.Id" method="post" style="display:inline-block;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger shadow btn-xs sharp"
                                                    onclick="return confirm('Bạn có chắc muốn xóa tour này?');">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal hiển thị QR Code -->
<div class="modal fade" id="qrModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR Code</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-center">
                <img id="qrImage" src="" alt="QR Code" style="max-width: 100%;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json'
                }
            });
        });

        function showQR(qrPath) {
            $('#qrImage').attr('src', qrPath);
            $('#qrModal').modal('show');
        }
    </script>
}