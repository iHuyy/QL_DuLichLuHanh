@model DuLich.Models.Tour
@{
    ViewData["Title"] = "Thêm Tour Mới";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Thêm Tour Mới</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-end mt-2 mt-sm-0 d-flex">
        <a href="@Url.Action("Tours", "Staff")" class="btn btn-primary">
            <i class="fa fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="CreateTour" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="TieuDe" class="control-label">Tên Tour</label>
                        <input asp-for="TieuDe" class="form-control" />
                        <span asp-validation-for="TieuDe" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Hình Ảnh Tour</label>
                        <input type="file" name="TourImages" multiple class="form-control" accept="image/*" />
                        <small class="form-text text-muted">Bạn có thể chọn nhiều hình ảnh cho tour</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NoiKhoiHanh" class="control-label">Điểm Khởi Hành</label>
                                <input asp-for="NoiKhoiHanh" class="form-control" />
                                <span asp-validation-for="NoiKhoiHanh" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="NoiDen" class="control-label">Điểm Đến</label>
                                <input asp-for="NoiDen" class="form-control" />
                                <span asp-validation-for="NoiDen" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ThoiGian" class="control-label">Thời Gian Khởi Hành</label>
                                <input asp-for="ThoiGian" class="form-control" type="datetime-local" />
                                <span asp-validation-for="ThoiGian" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SoLuong" class="control-label">Số Lượng Khách Tối Đa</label>
                                <input asp-for="SoLuong" class="form-control" type="number" min="1" />
                                <span asp-validation-for="SoLuong" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="GiaNguoiLon" class="control-label">Giá Người Lớn</label>
                                <input asp-for="GiaNguoiLon" class="form-control" type="number" min="0" step="1000" />
                                <span asp-validation-for="GiaNguoiLon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="GiaTreEm" class="control-label">Giá Trẻ Em</label>
                                <input asp-for="GiaTreEm" class="form-control" type="number" min="0" step="1000" />
                                <span asp-validation-for="GiaTreEm" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="MoTa" class="control-label">Mô Tả Tour</label>
                        <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Tạo Tour
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Thêm trình soạn thảo rich text cho mô tả
            if (typeof CKEDITOR !== 'undefined') {
                CKEDITOR.replace('MoTa');
            }
        });
    </script>
}